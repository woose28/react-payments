{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",
    "baseUrl": "src",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,

    "allowJs": true
  },
  "include": ["src"]
}
